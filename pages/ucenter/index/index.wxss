/* pages/ucenter/index/index.wxss */

.separate {
  background: #e0e3da;
  width: 100%;
  height: 6rpx;
}

/* 个人信息 */
.profile-info {
  background-color: #ab956d;
  color: #f4f4f4;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.profile-info .avatar {
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
}

.profile-info .info {
  padding-left: 32rpx;
  height: 85rpx;
}

.profile-info .info .name {
  color: #ffffff;
  font-size: 38rpx;
}

/* 我的活动 */
.user_area {
  width: 100%;
  height: 226rpx;
  background: #ffffff;
}

.user_row {
  height: 86rpx;
  border-bottom: 1px solid #fafafa;
}

.user_row_left {
  float: left;
  color: #666666;
  font-weight: 550;
  line-height: 86rpx;
  margin-left: 30rpx;
  font-size: 26rpx;
  letter-spacing: 1rpx;
}

.user_row_right {
  float: right;
  height: 40rpx;
  width: 40rpx;
  margin-top: 28rpx;
  margin-right: 30rpx;
}

/* 功能列表 */
.user_column {
  height: 140rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
}

.user_column_item {
  width: 25%;
  height: 140rpx;
  text-align: center;
}

.user_column_item_image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
}

.user_column_item_text {
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #555555;
}